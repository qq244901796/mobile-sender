<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <TextView
            android:id="@+id/selectedDeviceText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="未选择电视设备"
            android:textSize="15sp" />

        <Button
            android:id="@+id/discoverButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="扫描电视设备" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/deviceRecycler"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="8dp" />

        <EditText
            android:id="@+id/linkInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="输入视频链接（优先）"
            android:inputType="textUri" />

        <Button
            android:id="@+id/sendLinkButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="发送链接到电视" />

        <Button
            android:id="@+id/selectFileButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="选择本地视频并发送" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/playControlButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="播放" />

            <Button
                android:id="@+id/pauseControlButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:layout_weight="1"
                android:text="暂停" />

            <Button
                android:id="@+id/stopControlButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:layout_weight="1"
                android:text="退出播放" />
        </LinearLayout>

        <TextView
            android:id="@+id/controlHintText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="控制能力：未选择设备"
            android:textSize="12sp" />

        <AutoCompleteTextView
            android:id="@+id/h5Input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:completionThreshold="1"
            android:hint="输入H5网站地址（会记住历史）"
            android:inputType="textUri" />

        <Button
            android:id="@+id/openH5Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="打开H5网页（支持投屏）" />

        <TextView
            android:id="@+id/resultText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="状态：就绪" />

    </LinearLayout>
</ScrollView>
